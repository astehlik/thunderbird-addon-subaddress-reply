{
    "manifest_version": 2,
    "name": "Reply with subaddress",
    "description": "Sets from address of replies to original recipient",
    "version": "0.1.0",
    "author": "Alexander Stehlik",
    "applications": {
        "gecko": {
            "id": "subaddress-reply@swebhosting.de",
            "strict_min_version": "91.0",
            "strict_max_version": "102.*"
        }
    },
    "icons": {
        "64": "images/internet.png",
        "32": "images/internet-32px.png",
        "16": "images/internet-16px.png"
    },
    "background": {
        "scripts": [
            "lib/email-addresses.js",
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "compose",
        "messagesRead"
    ]
}
